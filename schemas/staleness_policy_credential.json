{
  "$id": "",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Staleness Policy Credential",
  "description": "ACDC credential defining a staleness policy bound to a subtree path",
  "type": "object",
  "credentialType": "StalenessPolicyCredential",
  "version": "1.0.0",
  "required": ["v", "d", "i", "ri", "s", "a"],
  "properties": {
    "v": {
      "type": "string",
      "description": "ACDC version string"
    },
    "d": {
      "type": "string",
      "description": "Credential SAID"
    },
    "i": {
      "type": "string",
      "description": "Issuer AID (policy author)"
    },
    "ri": {
      "type": "string",
      "description": "Registry identifier for TEL anchoring"
    },
    "s": {
      "type": "string",
      "description": "Schema SAID"
    },
    "a": {
      "type": "object",
      "description": "Policy attributes",
      "required": ["d", "dt", "policyType", "subtreePath"],
      "properties": {
        "d": {
          "type": "string",
          "description": "Attributes block SAID"
        },
        "dt": {
          "type": "string",
          "format": "date-time",
          "description": "Policy creation timestamp (ISO 8601)"
        },
        "policyType": {
          "type": "string",
          "enum": ["block", "cascade_revoke", "re_execute", "selective_retest", "warn"],
          "description": "Type of staleness policy action"
        },
        "subtreePath": {
          "type": "string",
          "description": "Smith tree subtree path this policy governs"
        },
        "parameters": {
          "type": "object",
          "description": "Additional policy parameters"
        },
        "priority": {
          "type": "integer",
          "description": "Priority for disambiguation (higher wins)"
        },
        "description": {
          "type": "string",
          "description": "Human-readable policy description"
        }
      }
    },
    "e": {
      "type": "object",
      "description": "Edge links to other credentials",
      "properties": {
        "d": {
          "type": "string",
          "description": "Edges block SAID"
        },
        "suite": {
          "type": "object",
          "description": "Edge to governing test suite GAID",
          "properties": {
            "n": {"type": "string", "description": "Suite GAID"},
            "s": {"type": "string", "description": "Suite schema SAID"}
          }
        },
        "previousPolicy": {
          "type": "object",
          "description": "Edge to previous policy version",
          "properties": {
            "n": {"type": "string", "description": "Previous policy credential SAID"},
            "s": {"type": "string", "description": "This schema SAID"}
          }
        }
      }
    }
  }
}
