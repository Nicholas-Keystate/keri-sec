{
  "$id": "",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Test Execution Credential",
  "description": "TEL-anchored attestation of a test execution against a GAID-governed suite",
  "type": "object",
  "credentialType": "TestExecutionCredential",
  "version": "1.0.0",
  "required": ["v", "d", "i", "ri", "s", "a"],
  "properties": {
    "v": {
      "type": "string",
      "description": "ACDC version string"
    },
    "d": {
      "type": "string",
      "description": "Credential SAID"
    },
    "i": {
      "type": "string",
      "description": "Issuer AID (test runner identity)"
    },
    "ri": {
      "type": "string",
      "description": "Registry identifier for TEL anchoring"
    },
    "s": {
      "type": "string",
      "description": "Schema SAID"
    },
    "a": {
      "type": "object",
      "description": "Credential attributes",
      "required": ["d", "dt", "treeRootSaid", "results"],
      "properties": {
        "d": {
          "type": "string",
          "description": "Attributes block SAID"
        },
        "dt": {
          "type": "string",
          "format": "date-time",
          "description": "Execution timestamp (ISO 8601)"
        },
        "treeRootSaid": {
          "type": "string",
          "description": "Smith tree root SAID at execution time"
        },
        "suiteSn": {
          "type": "integer",
          "description": "Suite sequence number at execution time"
        },
        "results": {
          "type": "object",
          "description": "Aggregated test results",
          "required": ["total", "passed", "failed", "skipped"],
          "properties": {
            "total": {
              "type": "integer",
              "description": "Total tests executed"
            },
            "passed": {
              "type": "integer",
              "description": "Tests that passed"
            },
            "failed": {
              "type": "integer",
              "description": "Tests that failed"
            },
            "skipped": {
              "type": "integer",
              "description": "Tests skipped"
            },
            "errors": {
              "type": "integer",
              "description": "Tests with errors"
            },
            "durationSeconds": {
              "type": "number",
              "description": "Total execution duration in seconds"
            },
            "coveragePercent": {
              "type": "number",
              "description": "Code coverage percentage"
            }
          }
        },
        "runnerAid": {
          "type": "string",
          "description": "AID of the test runner (CI agent, developer)"
        }
      }
    },
    "e": {
      "type": "object",
      "description": "Edge links to other credentials",
      "properties": {
        "d": {
          "type": "string",
          "description": "Edges block SAID"
        },
        "suite": {
          "type": "object",
          "description": "Edge to governing test suite GAID",
          "properties": {
            "n": {"type": "string", "description": "Suite GAID"},
            "s": {"type": "string", "description": "Suite schema SAID"}
          }
        },
        "previousRun": {
          "type": "object",
          "description": "Edge to previous execution credential (chain)",
          "properties": {
            "n": {"type": "string", "description": "Previous execution credential SAID"},
            "s": {"type": "string", "description": "This schema SAID"}
          }
        },
        "codeUnderTest": {
          "type": "object",
          "description": "Edge to source subtree commitment",
          "properties": {
            "n": {"type": "string", "description": "Source subtree root SAID"},
            "s": {"type": "string", "description": "Schema SAID"}
          }
        },
        "runtimeEnv": {
          "type": "object",
          "description": "Edge to runtime environment manifest",
          "properties": {
            "n": {"type": "string", "description": "RuntimeManifest SAID"},
            "s": {"type": "string", "description": "Schema SAID"}
          }
        }
      }
    }
  }
}
