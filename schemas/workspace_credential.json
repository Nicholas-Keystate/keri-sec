{
  "$id": "EWorkspace_Schema_________________________",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Governed Workspace Credential",
  "description": "ACDC schema for workspace-level dependency governance",
  "type": "object",
  "credentialType": "GovernedWorkspaceCredential",
  "version": "1.0.0",
  "properties": {
    "v": {
      "type": "string",
      "description": "Version string"
    },
    "d": {
      "type": "string",
      "description": "SAID of this credential"
    },
    "i": {
      "type": "string",
      "description": "Issuer AID (workspace controller)"
    },
    "ri": {
      "type": "string",
      "description": "Registry identifier for TEL"
    },
    "s": {
      "type": "string",
      "description": "Schema SAID",
      "const": "EWorkspace_Schema_________________________"
    },
    "a": {
      "type": "object",
      "description": "Workspace attributes",
      "properties": {
        "d": {
          "type": "string",
          "description": "SAID of attributes block"
        },
        "dt": {
          "type": "string",
          "format": "date-time",
          "description": "Issuance datetime"
        },
        "name": {
          "type": "string",
          "description": "Workspace name (e.g., 'keri-workspace')"
        },
        "workspaceSaid": {
          "type": "string",
          "description": "Computed SAID of unified constraints"
        },
        "unifiedConstraints": {
          "type": "object",
          "description": "Map of package name to unified version spec",
          "additionalProperties": {
            "type": "string"
          }
        },
        "projectCount": {
          "type": "integer",
          "description": "Number of projects in workspace"
        },
        "projectSaids": {
          "type": "array",
          "description": "SAIDs of individual project stacks",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["d", "dt", "name", "workspaceSaid", "unifiedConstraints", "projectCount"]
    },
    "e": {
      "type": "object",
      "description": "Edges to project stacks",
      "properties": {
        "projects": {
          "type": "array",
          "description": "Edges to project stack credentials",
          "items": {
            "type": "object",
            "properties": {
              "d": {"type": "string"},
              "s": {"type": "string", "const": "EStack_Cred_Schema________________________"}
            }
          }
        }
      }
    }
  },
  "required": ["v", "d", "i", "ri", "s", "a"]
}
