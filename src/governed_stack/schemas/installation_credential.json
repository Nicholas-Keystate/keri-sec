{
  "$id": "EInstCred_GS_v1_SAID_PLACEHOLDER",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Installation Credential",
  "description": "TEL-anchored attestation of installed packages in a governed environment",
  "type": "object",
  "credentialType": "InstallationCredential",
  "version": "1.0.0",
  "required": ["v", "d", "i", "ri", "s", "a"],
  "properties": {
    "v": {
      "type": "string",
      "description": "ACDC version string"
    },
    "d": {
      "type": "string",
      "description": "Credential SAID (self-addressing identifier)"
    },
    "i": {
      "type": "string",
      "description": "Issuer AID (who performed the installation)"
    },
    "ri": {
      "type": "string",
      "description": "Registry identifier for TEL anchoring"
    },
    "s": {
      "type": "string",
      "description": "Schema SAID (this schema's identifier)"
    },
    "a": {
      "type": "object",
      "description": "Credential attributes",
      "required": ["d", "dt", "stack_said", "lock_said", "python_version", "packages"],
      "properties": {
        "d": {
          "type": "string",
          "description": "Attributes block SAID"
        },
        "dt": {
          "type": "string",
          "format": "date-time",
          "description": "Installation timestamp (ISO 8601)"
        },
        "stack_said": {
          "type": "string",
          "description": "SAID of governing stack definition"
        },
        "lock_said": {
          "type": "string",
          "description": "SAID of resolved lock file"
        },
        "python_version": {
          "type": "string",
          "description": "Exact Python version (e.g., 3.12.12)"
        },
        "platform": {
          "type": "string",
          "description": "Platform identifier (e.g., darwin-arm64)"
        },
        "venv_path": {
          "type": "string",
          "description": "Relative path to virtual environment"
        },
        "resolver": {
          "type": "string",
          "description": "Package resolver used (e.g., uv-0.5.0)"
        },
        "packages": {
          "type": "array",
          "description": "List of installed packages with SAIDs",
          "items": {
            "type": "object",
            "required": ["name", "version"],
            "properties": {
              "name": {
                "type": "string",
                "description": "Package name (normalized)"
              },
              "version": {
                "type": "string",
                "description": "Exact installed version"
              },
              "wheel_said": {
                "type": "string",
                "description": "SAID of wheel file content (optional, for source builds)"
              },
              "source": {
                "type": "string",
                "enum": ["pypi", "git", "local", "url"],
                "description": "Package source"
              }
            }
          }
        }
      }
    },
    "e": {
      "type": "object",
      "description": "Edge links to other credentials",
      "properties": {
        "stack": {
          "type": "object",
          "description": "Edge to governing stack credential",
          "properties": {
            "n": {"type": "string", "description": "Stack credential SAID"},
            "s": {"type": "string", "description": "Stack schema SAID"}
          }
        },
        "previous": {
          "type": "object",
          "description": "Edge to previous installation (for upgrades)",
          "properties": {
            "n": {"type": "string", "description": "Previous installation SAID"},
            "s": {"type": "string", "description": "This schema SAID"}
          }
        }
      }
    }
  }
}
